@model IEnumerable<RnD.BLTemp.Web.Models.CategoryModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="categoryIndexPage">
    <div>
        @*<a href="@Url.Action("Add", "Category")" id="lnkAddCategory">Add Category</a>*@
        <a href="@Url.Action("Get", "Category", new { id = 0 })" id="lnkAddCategory">Add</a>
    </div>
    <div id="categoryDataTableZone">
        <div id="dataTableZone">
            <table id="categoryDataTable">
                <thead>
                    <tr style="background-color: #F58752">
                        <th>Id
                        </th>
                        <th>Category Name
                        </th>
                        <th>Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.CategoryId
                            </td>
                            <td style="width: 400px">
                                @item.CategoryName
                            </td>
                            <td style="width: 200px">
                                @*<a href="@Url.Action("Details", "Category", new { id = item.CategoryId })" class="lnkDetailsCategory">Details</a>&nbsp;&nbsp;&nbsp;
                            <a href="@Url.Action("Edit", "Category", new { id = item.CategoryId })" class="lnkEditCategory">Edit</a>&nbsp;&nbsp;&nbsp;
                            <a href="@Url.Action("Delete", "Category", new { id = item.CategoryId })" class="lnkDeleteCategory">Delete</a>*@

                                <a href="@Url.Action("Get", "Category", new { id = item.CategoryId })" class="lnkDetailsCategory">Details</a>&nbsp;&nbsp;&nbsp;
                            <a href="@Url.Action("Get", "Category", new { id = item.CategoryId })" class="lnkEditCategory">Edit</a>&nbsp;&nbsp;&nbsp;
                            <a href="@Url.Action("Get", "Category", new { id = item.CategoryId })" class="lnkDeleteCategory">Delete</a>
                            </td>
                        </tr>
                    }
                    @if (ViewBag.PageViewModel != null)
                    {
                        <tr style="background-color: #F58752">
                            <td><span class="total-row">Total: @Html.Raw(ViewBag.TotalRowCount)</span></td>
                            <td>
                                <div id="lvPager1">
                                    <input type="hidden" value="@Html.Raw(ViewBag.PageViewModel.PageSize)" id="hdSize" />
                                    <input type="hidden" value="@Html.Raw(ViewBag.PageViewModel.Index)" id="hdIndex" />
                                    <div class="pager">
                                        @Html.Raw(ViewBag.PageViewModel.LinkPre)
                                        @Html.Raw(ViewBag.PageViewModel.LinkIstPage)
                                        @Html.Raw(ViewBag.PageViewModel.LinkIstDot)
                                        @Html.Raw(ViewBag.PageViewModel.LinkDynamicPage)
                                        @Html.Raw(ViewBag.PageViewModel.Link2ndDot)
                                        @Html.Raw(ViewBag.PageViewModel.LinkLastPage)
                                        @Html.Raw(ViewBag.PageViewModel.LinkNext)
                                    </div>

                                </div>
                            </td>
                            <td>
                                <div id="lvPager2">
                                    <div class="pager">
                                        <select id="ddlPageNumber">
                                            <option value="10">10</option>
                                            <option value="20">20</option>
                                            <option value="30">30</option>
                                            <option value="40">40</option>
                                            <option value="50">50</option>
                                            <option value="60">60</option>
                                            <option value="70">70</option>
                                            <option value="80">80</option>
                                            <option value="90">90</option>
                                            <option value="100">100</option>
                                        </select>
                                        @*<a id="A1" href="javascript:void(0);" class="page-numbers @ViewBag.PageViewModel.PageNumber10Class">10</a>&nbsp;
                                        <a id="A2" href="javascript:void(0);" class="page-numbers @ViewBag.PageViewModel.PageNumber20Class">20</a>&nbsp;
                                        <a id="A3" href="javascript:void(0);" class="page-numbers @ViewBag.PageViewModel.PageNumber30Class">30</a>&nbsp;
                                        <a id="A4" href="javascript:void(0);" class="page-numbers @ViewBag.PageViewModel.PageNumber40Class">40</a>&nbsp;
                                        <a id="A5" href="javascript:void(0);" class="page-numbers @ViewBag.PageViewModel.PageNumber50Class">50</a>&nbsp;
                                        <a id="A6" href="javascript:void(0);" class="page-numbers @ViewBag.PageViewModel.PageNumber60Class">60</a>&nbsp;
                                        <a id="A7" href="javascript:void(0);" class="page-numbers @ViewBag.PageViewModel.PageNumber70Class">70</a>&nbsp;
                                        <a id="A8" href="javascript:void(0);" class="page-numbers @ViewBag.PageViewModel.PageNumber80Class">80</a>&nbsp;
                                        <a id="A9" href="javascript:void(0);" class="page-numbers @ViewBag.PageViewModel.PageNumber90Class">90</a>&nbsp;
                                        <a href="javascript:void(0);" id="A10" class="page-numbers @ViewBag.PageViewModel.PageNumber100Class">100</a>*@
                                        <span class="page-numbers desc">per page</span>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    @*<div id="categoryVideoZone">
        <video src="~/Video/movie.mp4" controls="controls" />
        <video width="320" height="240" controls>
            <source src="~/Video/movie.mp4" type="video/mp4">

            <object data="~/Video/movie.mp4" width="320" height="240">
                <embed src="~/Video/movie.swf" width="320" height="240">
            </object>
        </video>
    </div>*@
    <div id="addCategoryDialog" title="Add Category">
    </div>
    <div id="editCategoryDialog" title="Edit Category">
    </div>
    <div id="deleteCategoryDailog" title="Delete Category">
    </div>
    <div id="detailsCategoryDialog" title="Details Category">
    </div>
    <div id="commonDialog" title="Information">
    </div>
</div>
